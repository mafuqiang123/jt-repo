<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jt.mapper.ItemMapper">

	<!-- <update id="updateItemState"> update tb_item set status=#{status}, 
		updated=now() <where> <foreach collection="ids" item="id"> or id=#{id} </foreach> 
		</where> </update> -->

	<update id="updateItemState">
		update tb_item set status=#{status},
		updated=now() where id in
		<foreach collection="ids" item="id" open="(" close=")"
			separator="," >
			#{id}
		</foreach>
	</update>


</mapper>